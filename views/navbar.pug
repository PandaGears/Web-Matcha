nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.sticky-top
	a.navbar-brand.title(href='/')
		img#Logo.d-inline-block.align-top(src='https://res.cloudinary.com/ddrrwygt1/image/upload/v1594120844/logoInvert_ygraez.png', alt='Logo', width='35', height='30' )
		|     Pan-der
	if userLogged
		button.navbar-toggler.animbutton.toggler-btn(type='button', data-toggle='collapse', data-target='#navbarMain', aria-controls='navbarMain', aria-expanded='false', aria-label='Toggle navigation')
			div.aniburger
				span
				span
				span
	#navbarMain.collapse.navbar-collapse
		ul.navbar-nav.mr-auto.mt-2.mt-lg-0
			if userLogged
				li#Recomm.nav-item
					a.nav-link(href='/recommendations') 
						i.i.fa.fa-address-book-o
						|	Search
				li#Chat.nav-item
					a.nav-link(href='/chat')
						i.fa.fa-commenting-o
						|	Chat

		if userLogged
			ul.navbar-nav.mt-2.mt-lg-0.nav-flex-auto
				li.nav-item.dropdown
					a#NotificationDropdown.nav-link.dropdown-toggle(style="cursor: pointer;", role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
						i.fa.fa-bell-o
						span#NotifAll.badge.badge-danger.mx-2
					.dropdown-menu.dropdown-menu-right(aria-labelledby='NotificationDropdown')
						a.dropdown-item(href='/notifications/likes') 
							i.fa.fa-heart-o
							|  Likes 
							span#NotifLike.badge.badge-danger
						a.dropdown-item(href='/chat') 
							i.fa.fa-commenting-o
							|  Messages 
							span#NotifMessage.badge.badge-danger
						a.dropdown-item(href='/notifications/views') 
							i.fa.fa-eye
							|  Views 
							span#NotifView.badge.badge-danger

					li.nav-item.dropdown
						a#usernameDropdown.nav-link.dropdown-toggle(style="cursor: pointer;" role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
							i.fa.fa-user-o
							|      #{user} 
						.dropdown-menu.dropdown-menu-right(aria-labelledby='usernameDropdown')
							a#Prof.dropdown-item(href='/user/profile', onmouseover="", style="cursor: pointer;")
								i.fa.fa-user-circle
								|  My Profile 
							a#LogoutBtn.dropdown-item(onclick='logoutinator()', onmouseover="", style="cursor: pointer;")
								i.fa.fa-sign-out
								|  Logout 

