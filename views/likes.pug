doctype html
html
	head
		include global_stylesheets
		link(rel='stylesheet', href='/likes.css')
	body
		include navbar.pug
		
		h1.text-center.my-3.mt-white.display-3#heading Profile Likes
		.container(style='max-width: 900px;min-width:360px;')
			.card.recommend-card
				h4.mx-auto.mt-2 Your Notifications:
				hr
				each val in userList
					.card-body.recommend-card
						if val.type == 1
							.row.mx-auto
								p
									i.fa.fa-user-o.mx-2.text-secondary
									a.toast-link(href='/user/profile/'+val.liker) #{val.liker}
									|  liked your profile, yaaaaaaay 
									i.fa.fa-heart.red
						else
							.row.mx-auto
								p
									i.fa.fa-user-o.mx-2.text-secondary
									a.toast-link(href='/user/profile/'+val.liker) #{val.liker}
									|  disliked your profile, feels bad man...
									i.fa.fa-heart-broken

	include footer
	
	include global_scripts
